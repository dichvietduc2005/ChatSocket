<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.client.controller.ConnectController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="JAVA CHAT APPLICATION" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <TextField fx:id="txtIp" promptText="Server IP" text="127.0.0.1" />
        <TextField fx:id="txtPort" promptText="Port" text="8888" />
        <TextField fx:id="txtName" promptText="Nhập tên của bạn (Username)" />
        <Button fx:id="btnConnect" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleConnect" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="KẾT NỐI SERVER">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Label fx:id="lblStatus" textFill="RED" />
    </children>
</VBox>